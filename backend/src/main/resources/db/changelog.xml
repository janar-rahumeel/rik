<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="[RIK-1] Set H2 mode" author="janar.rahumeel" dbms="h2" runAlways="true">
        <sql>
            SET MODE PostgreSQL;
        </sql>
    </changeSet>

    <changeSet id="[RIK-1] Add EVENT table" author="janar.rahumeel">
        <createSequence sequenceName="SEQ_EVENT" startValue="1000" incrementBy="1"/>
        <createTable tableName="EVENT">
            <column name="ID" type="BIGINT" defaultValueSequenceNext="SEQ_EVENT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="START_DATETIME" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="LOCATION" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" type="VARCHAR(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="MODIFIED_AT" type="TIMESTAMP"/>
        </createTable>
        <addUniqueConstraint tableName="EVENT" columnNames="NAME" constraintName="UK_EVENT"/>
    </changeSet>

    <changeSet id="[RIK-1] Add PAYMENT_TYPE table" author="janar.rahumeel">
        <createSequence sequenceName="SEQ_PAYMENT_TYPE" startValue="1000" incrementBy="1"/>
        <createTable tableName="PAYMENT_TYPE">
            <column name="ID" type="INT" defaultValueSequenceNext="SEQ_PAYMENT_TYPE">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="TYPE_VALUE" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="MODIFIED_AT" type="TIMESTAMP"/>
        </createTable>
        <addUniqueConstraint tableName="PAYMENT_TYPE" columnNames="TYPE_VALUE" constraintName="UK_PAYMENT_TYPE"/>
    </changeSet>

    <changeSet id="[RIK-1] Add PERSON_PARTICIPANT table" author="janar.rahumeel">
        <createSequence sequenceName="SEQ_PERSON_PARTICIPANT" startValue="1000" incrementBy="1"/>
        <createTable tableName="PERSON_PARTICIPANT">
            <column name="ID" type="BIGINT" defaultValueSequenceNext="SEQ_PERSON_PARTICIPANT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="FIRST_NAME" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_NAME" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="NATIONAL_IDENTIFICATION_CODE" type="VARCHAR(11)">
                <constraints nullable="false"/>
            </column>
            <column name="PAYMENT_TYPE_ID" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="ADDITIONAL_INFORMATION" type="VARCHAR(1500)"/>
            <column name="CREATED_AT" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="MODIFIED_AT" type="TIMESTAMP"/>
        </createTable>
        <addUniqueConstraint tableName="PERSON_PARTICIPANT" columnNames="NATIONAL_IDENTIFICATION_CODE"
                             constraintName="UK_PERSON_PARTICIPANT"/>
        <addForeignKeyConstraint baseTableName="PERSON_PARTICIPANT" baseColumnNames="PAYMENT_TYPE_ID"
                                 referencedTableName="PAYMENT_TYPE" referencedColumnNames="ID"
                                 constraintName="FK_PERSON_PARTICIPANT_PAYMENT_TYPE"/>
    </changeSet>

    <changeSet id="[RIK-1] Add LEGAL_ENTITY_PARTICIPANT table" author="janar.rahumeel">
        <createSequence sequenceName="SEQ_LEGAL_ENTITY_PARTICIPANT" startValue="1000" incrementBy="1"/>
        <createTable tableName="LEGAL_ENTITY_PARTICIPANT">
            <column name="ID" type="BIGINT" defaultValueSequenceNext="SEQ_LEGAL_ENTITY_PARTICIPANT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="REGISTRATION_CODE" type="VARCHAR(8)">
                <constraints nullable="false"/>
            </column>
            <column name="PARTICIPANT_COUNT" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="PAYMENT_TYPE_ID" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="ADDITIONAL_INFORMATION" type="VARCHAR(5000)"/>
            <column name="CREATED_AT" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="MODIFIED_AT" type="TIMESTAMP"/>
        </createTable>
        <addUniqueConstraint tableName="LEGAL_ENTITY_PARTICIPANT" columnNames="REGISTRATION_CODE"
                             constraintName="UK_LEGAL_ENTITY_PARTICIPANT"/>
        <addForeignKeyConstraint baseTableName="LEGAL_ENTITY_PARTICIPANT" baseColumnNames="PAYMENT_TYPE_ID"
                                 referencedTableName="PAYMENT_TYPE" referencedColumnNames="ID"
                                 constraintName="FK_LEGAL_ENTITY_PARTICIPANT_PAYMENT_TYPE"/>
    </changeSet>

    <changeSet id="[RIK-1] Add EVENT_PERSON_PARTICIPANT_X table" author="janar.rahumeel">
        <createTable tableName="EVENT_PERSON_PARTICIPANT_X">
            <column name="EVENT_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="PERSON_PARTICIPANT_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="EVENT_PERSON_PARTICIPANT_X" columnNames="EVENT_ID,PERSON_PARTICIPANT_ID"
                             constraintName="UK_EVENT_PERSON_PARTICIPANT_X"/>
        <addForeignKeyConstraint baseTableName="EVENT_PERSON_PARTICIPANT_X"
                                 baseColumnNames="EVENT_ID"
                                 referencedTableName="EVENT" referencedColumnNames="ID"
                                 constraintName="FK_EVENT_PERSON_PARTICIPANT_X_EVENT"/>
        <addForeignKeyConstraint baseTableName="EVENT_PERSON_PARTICIPANT_X"
                                 baseColumnNames="PERSON_PARTICIPANT_ID"
                                 referencedTableName="PERSON_PARTICIPANT" referencedColumnNames="ID"
                                 constraintName="FK_EVENT_PERSON_PARTICIPANT_X_PERSON_PARTICIPANT"/>
    </changeSet>

    <changeSet id="[RIK-1] Add EVENT_LEGAL_ENTITY_PARTICIPANT_X table" author="janar.rahumeel">
        <createTable tableName="EVENT_LEGAL_ENTITY_PARTICIPANT_X">
            <column name="EVENT_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="LEGAL_ENTITY_PARTICIPANT_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="EVENT_LEGAL_ENTITY_PARTICIPANT_X"
                             columnNames="EVENT_ID,LEGAL_ENTITY_PARTICIPANT_ID"
                             constraintName="UK_EVENT_LEGAL_ENTITY_PARTICIPANT_X"/>
        <addForeignKeyConstraint baseTableName="EVENT_LEGAL_ENTITY_PARTICIPANT_X"
                                 baseColumnNames="EVENT_ID"
                                 referencedTableName="EVENT" referencedColumnNames="ID"
                                 constraintName="FK_EVENT_LEGAL_ENTITY_PARTICIPANT_X_EVENT"/>
        <addForeignKeyConstraint baseTableName="EVENT_LEGAL_ENTITY_PARTICIPANT_X"
                                 baseColumnNames="LEGAL_ENTITY_PARTICIPANT_ID"
                                 referencedTableName="LEGAL_ENTITY_PARTICIPANT" referencedColumnNames="ID"
                                 constraintName="FK_EVENT_LEGAL_ENTITY_PARTICIPANT_X_LEGAL_ENTITY_PARTICIPANT"/>
    </changeSet>

    <changeSet id="[RIK-1] Add EVENT_PARTICIPANT_VIEW view" author="janar.rahumeel">
        <createView viewName="EVENT_PARTICIPANT_VIEW">
            SELECT 'PP-' || pp.ID                  AS ID,
                   eppx.EVENT_ID                   AS EVENT_ID,
                   pp.FIRST_NAME || ' ' || pp.LAST_NAME   AS NAME,
                   pp.NATIONAL_IDENTIFICATION_CODE AS IDENTITY_CODE,
                   pp.CREATED_AT                   AS CREATED_AT,
                   pp.MODIFIED_AT                  AS MODIFIED_AT
            FROM PERSON_PARTICIPANT pp
                     JOIN EVENT_PERSON_PARTICIPANT_X eppx ON pp.ID = eppx.PERSON_PARTICIPANT_ID
            UNION
            SELECT 'LEP-' || lep.ID      AS ID,
                   elepx.EVENT_ID        AS EVENT_ID,
                   lep.NAME              AS NAME,
                   lep.REGISTRATION_CODE AS IDENTITY_CODE,
                   lep.CREATED_AT        AS CREATED_AT,
                   lep.MODIFIED_AT       AS MODIFIED_AT
            FROM LEGAL_ENTITY_PARTICIPANT lep
                     JOIN EVENT_LEGAL_ENTITY_PARTICIPANT_X elepx ON lep.ID = elepx.LEGAL_ENTITY_PARTICIPANT_ID
        </createView>
    </changeSet>

    <changeSet id="[RIK-1] Add PAYMENT_TYPE data" author="janar.rahumeel">
        <insert tableName="PAYMENT_TYPE">
            <column name="TYPE_VALUE">Sularaha</column>
        </insert>
        <insert tableName="PAYMENT_TYPE">
            <column name="TYPE_VALUE">Ülekanne</column>
        </insert>
    </changeSet>

</databaseChangeLog>